                      ,transformers >=0.4 && <0.5
                      ,monad-control <= 1.0.1.0
                      ,exceptions <= 0.8.3
                      ,text >=1.2 && <1.3
                      ,aeson >=0.11 && <0.12
                      ,wai >=3.0 && <3.1
                      ,wai-middleware-static >=0.8 && <0.9
                      ,wai-extra >=3.0 && <3.1
                      ,resource-pool >=0.2.3.2 && <0.3
                      ,postgresql-simple >= 0.5 && <0.6
                      ,blaze-html >=0.8.0.2 && <0.9
                      ,xml <= 1.3.14
                      ,feed >= 0.3.11.1 && < 0.4
                      ,optparse-applicative <= 0.14.0.0
                      ,configurator-ng == 0.0.0.1
                      ,markdown <= 0.1.16
                      ,network-uri <= 2.6.1.0
                      ,cgi <= 3001.3.0.2
                      ,aeson >=0.11.0.0 && <0.12
                      ,bcrypt == 0.0.10
                      ,jwt <= 0.7.2
                      ,time <= 1.8.0.2
                      ,http-types <= 0.9.1
                      ,word8 <= 0.1.2
