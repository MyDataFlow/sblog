  build-depends:       base >=4.8 && <4.9
                      ,mtl <= 2.2.1
                      ,bytestring >=0.10 && <0.11
                      ,containers <= 0.5.6.2
                      ,data-default <= 0.7.1.1
                      ,scotty >=0.11 && <0.12
